/* miniprogram/pages/user/user.wxss */
.user-page {
  width: 100%;
	height: 100%;
	background: #ffffff;
	box-shadow: 0rpx 6rpx 12rpx 0rpx 
		rgba(0, 0, 0, 0.16);
  border-radius: 28rpx;
	background-color: #ffffff;

}
.user-info{
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  transition: all 300ms ease;
}
.userinfo-avatar[type="person"] {
  min-height: 100rpx;
  width: 150rpx;
  height: 150rpx;
}
.userinfo-avatar {
  border-radius: 40%;
  background-size: cover;
  margin: 0;
  padding: 0;
  margin-left: 0;
  margin-right: 5%;
}

.userinfo-avatar:after {
  border: none;
}
.userinfo-nickname {
  color: white;
  text-align: flex-start;
  padding-left: 1px;
  margin-left: 1px;
	font-family: Gill Sans;
	font-size: 60rpx;
}

.userinfo-nickname::after {
  border: none;
}
.id {
  display: flex;
  flex-direction: column;
  width: 65%;
}

page{
  width: 100%;
  height: 100%;
  margin: 0;
  background: #f1f1f1;
}

.location {
  width: 100%;
  height: 100%;
}

.back {
  width: 100%;
  height: 100%;
}

.uper {
  position: relative;
  font-size: 40rpx; 
  display: flex; 
  flex-direction: column;
  z-index: 2;
  height: 80%;
  width: 90%;
  left: 5%;
}
.lower {
  position: absolute; 
  margin-top:0; 
  display: flex; 
  height:100%; 
  width:100%; 
  top: 0;
  z-index: 1;
}
.img {
  margin-top: 0%; 
  width:100%; 
  height:100%; 
}

.container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position:fixed;
  height: 8%;
  width: 100%;
  background-color:#efefef;
  border-top:1px solid #CCC;
  bottom:0rpx;
  background: #FFFFFF;
  box-shadow: 0px -15px 20px rgba(87, 87, 87, 0.33);
  opacity: 0.9;
  border-radius: 20px 20px 0px 0px ;
  z-index: 1;
  padding: 5%;
}

.arr{
  position: relative;
  border-radius: 100%;
  margin: 0;
  padding: 0;
  width: 80rpx;
  height: 80rpx;
  z-index: 2;
}