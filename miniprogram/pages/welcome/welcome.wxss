/* miniprogram/pages/welcome/welcome.wxss */
page{
  width: 100%;
  height: 100%;
  margin: 0;
  background: #f1f1f1;
}

.location {
  width: 100%;
  height: 100%;
}
.wx-swiper-dots.wx-swiper-dots-horizontal {
  top: 80%;
  z-index: 4;
}
.back {
  width: 100%;
  height: 100%;
  border-radius: 0px 0px 20px 20px ;
}

.uper {
  position: relative;
  font-size: 40rpx; 
  display: flex; 
  flex-direction: column;
  z-index: 2;
  height: 80%;
  width: 90%;
  left: 5%;
}
.lower {
  position: absolute; 
  margin-top:0; 
  display: flex; 
  height:100%; 
  width:100%; 
  top: 0;
  z-index: 1;
}
.textarea {
  width: 90%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.img {
  margin-top: 0%; 
  width:100%; 
  height:100%; 
}
.time {
  position: fixed;
  bottom: 20%;
  width: 90%;
  left: 5%;
  z-index: 2;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position:fixed;
  height: 40%;
  width: 100%;
  background-color:#efefef;
  border-top:1px solid #CCC;
  bottom:0rpx;
  background: #FFFFFF;
  box-shadow: 0px -15px 20px rgba(87, 87, 87, 0.33);
  opacity: 1;
  border-radius: 20px 20px 0px 0px ;
  z-index: 1;
  padding-block-end: 40%;
}

.arr{
  position: relative;
  border-radius: 100%;
  margin: 0;
  padding: 0;
  width: 80rpx;
  height: 80rpx;
  z-index: 2;
}

.butt {
  width: 150px;
  height: 40px;
  left: 25%;
  bottom: 10%;
  border: 1px solid #FA6400;
  opacity: 1;
  color: #FA6400;
  border-radius: 100px;
  background: white;
  position: absolute;
  z-index: 5;
}