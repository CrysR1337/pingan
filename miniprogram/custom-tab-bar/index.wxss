.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 8%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-radius: 29px 29px 0px 0px;
  
}

.tab-bar-border {
  background-color: transparent;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

